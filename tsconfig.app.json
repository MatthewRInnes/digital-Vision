/**
 * TypeScript Configuration for Application
 * 
 * Configuration file for TypeScript compilation of the main application.
 * Defines:
 * - JavaScript target version
 * - Module resolution
 * - Type checking rules
 * - Path aliases
 * - React JSX settings
 */

{
  "compilerOptions": {
    // JavaScript target version
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode configuration */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Type checking and linting rules */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Path aliases for imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
